        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/jaydave</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">Iamthebest9879!</property>
